@import 'weui.wxss';

page {
    background-color: #f8f8f8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
    background-color: #0099FF;
    color: #FFFFFF;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__bd_padding-top {
    padding-top: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #FFFFFF;
    text-align: left;
    font-size: 14px;
}

button[type="primary"] {
	color: #FFFFFF;
	background-color: #0099FF;
}

button[disabled][type="primary"] {
	background-color: rgba(0, 153, 255, 0.3);
}


.button-hover[type="primary"] {
	color: rgba(255, 255, 255,0.6);
	background-color: #006699;
}

image.banner {
    width: 100%;
    height: 198px;
}

.page__hd_homepage {
    padding: 40px;
}

.page__desc_homepage {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.wrap {
    padding-top: 7px;
    padding-bottom: 8px;
}

.text-primary {
	color: #1AAD19;
}

.text-error {
	color: #E64340;
}

.weui-cell_access--notification {
  background-color: #FFFFCC;
  box-shadow: 0px 0px 3px #666;
}

.notification-icon {
  padding-bottom: 3px;
}
