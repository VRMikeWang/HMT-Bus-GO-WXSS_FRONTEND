<!-- 线路详情页 -->

<page>
	<view class="page">
		<view class="page__hd">
			<view class="page__title">
				<block wx:if="{{loaded}}">{{lineName}} [ {{lineStart}} 开往 {{lineEnd}} ]</block>
				<block wx:else>加载中...</block>
			</view>
			<view class="page__desc">
				<block wx:if="{{loaded}}">{{type}}发车时刻表</block>
				<block wx:else>Loading...</block>
			</view>
		</view>

		<block wx:if="{{loaded}}">
			<view class="page__bd">
				<view class="weui-cells weui-cells_after-title">
					<block wx:if="{{tableCount == 0}}">
						<block wx:if="{{typeNum == 1}}">
							<view class="weui-cell">
								<view class="weui-cell__bd">数据暂缺</view>
							</view>
						</block>
						<block wx:else>
							<view class="weui-cell">
								<view class="weui-cell__bd">维持工作日的时刻表</view>
							</view>
						</block>
					</block>
					<block wx:else>
						<block wx:for="{{timetable}}" wx:for-item="time">
							<view class="weui-cell">
								<view class="weui-cell__bd">{{time}}</view>
							</view>
						</block>
					</block>
				</view>
			</view>
		</block>

	</view>
</page>
