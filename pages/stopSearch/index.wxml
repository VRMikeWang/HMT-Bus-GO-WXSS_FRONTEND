<page>
	<view class="page">
		<view class="page__hd">
			<view class="page__title">站点检索结果</view>
			<view class="page__desc">共找到 0 个站点</view>
		</view>

		<view class="page__bd">
			<view class="weui-cells weui-cells_after-title">
				<view class="weui-cell weui-cell_input">
					<view class="weui-cell__hd">
						<view class="weui-label">站点名称</view>
					</view>
					<view class="weui-cell__bd">
						<input class="weui-input" name="stopname" placeholder="键入站点名称...">键入站点名称...</input>
					</view>
				</view>
			</view>
			<view class="wrap"></view>
