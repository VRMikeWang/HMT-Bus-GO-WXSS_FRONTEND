			</view>

			<view class="weui-cells__title">检索结果</view>
			<view class="weui-cells weui-cells_after-title">
				<navigator class="weui-cell weui-cell_access" url="/pages/stopInfo/index?id=1" hover-class="weui-cell_active">
					<view class="weui-cell__bd">荷园</view>
					<view class="weui-cell__ft weui-cell__ft_in-access"></view>
				</navigator>
			</view>
		</view>

	</view>
